{
	"name": "repo",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"start": "turbo run start",
		"dev:chat": "turbo run dev --filter=chat",
		"dev:mobile": "turbo run dev --filter=mobile",
		"dev:server": "turbo run dev --filter=server",
		"dev:workers": "turbo run dev --filter=workers",
		"dev:www": "turbo run dev --filter=www",
		"start:chat": "turbo run start --filter=chat",
		"start:mobile": "turbo run start --filter=mobile",
		"start:server": "turbo run start --filter=server",
		"start:workers": "turbo run start --filter=workers",
		"start:www": "turbo run start --filter=www",
		"build:chat": "turbo run build --filter=chat",
		"build:mobile": "turbo run build --filter=mobile",
		"build:server": "turbo run build --filter=server",
		"build:workers": "turbo run build --filter=workers",
		"build:www": "turbo run build --filter=www",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"check": "biome check --write .",
		"check-types": "turbo run check-types",
		"clean": "rm -rf node_modules logs bun.lock .turbo && bun install"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"prettier": "^3.7.4",
		"turbo": "^2.8.3",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.3.2",
	"workspaces": ["apps/*", "packages/*"]
}
