{
	"name": "server",
	"version": "1.0.0",
	"description": "betalift server",
	"keywords": [
		"server",
		"api"
	],
	"license": "ISC",
	"author": "Hezron Nyamboga",
	"type": "module",
	"main": "index.ts",
	"scripts": {
		"build": "tsc",
		"start": "node dist/src/index.js",
		"dev": "nodemon --watch 'src/**/*' --exec tsx src/index.ts",
		"seed": "tsx src/database/seeders/index.ts",
		"format": "biome format",
		"lint": "biome lint",
		"check": "biome check --write",
		"lint:fix": "biome lint --fix",
		"check-types": "tsc --noEmit",
		"clean": "rm -rf dist node_modules bun.lock biome.lock logs",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
		"test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
		"email:preview": "tsx scripts/generate-email-previews.ts",
		"email:test": "tsx scripts/test-email.ts",
		"gen:docs": "tsx scripts/generate-docs.ts"
	},
	"dependencies": {
		"amqplib": "^0.10.9",
		"bcryptjs": "^3.0.3",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"csurf": "^1.11.0",
		"dotenv": "^17.2.3",
		"expo-server-sdk": "^4.0.0",
		"express": "^5.2.1",
		"express-rate-limit": "^8.2.1",
		"express-validator": "^7.3.1",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.3",
		"mongoose": "^9.1.1",
		"morgan": "^1.10.1",
		"multer": "^2.0.2",
		"nodemailer": "^7.0.12",
		"postman-to-openapi": "^3.0.1",
		"swagger-ui-express": "^5.0.1",
		"validator": "^13.15.26",
		"winston": "^3.19.0",
		"yamljs": "^0.3.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/amqplib": "^0.10.8",
		"@types/bcryptjs": "^3.0.0",
		"@types/cookie-parser": "^1.4.10",
		"@types/cors": "^2.8.19",
		"@types/csurf": "^1.11.5",
		"@types/express": "^5.0.6",
		"@types/ip": "^1.1.3",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/morgan": "^1.9.10",
		"@types/multer": "^2.0.0",
		"@types/node": "^25.0.3",
		"@types/nodemailer": "^7.0.4",
		"@types/supertest": "^6.0.3",
		"@types/swagger-ui-express": "^4.1.8",
		"@types/validator": "^13.15.10",
		"@types/yamljs": "^0.2.34",
		"ip": "^2.0.1",
		"jest": "^30.2.0",
		"nodemon": "^3.1.11",
		"supertest": "^7.2.2",
		"ts-jest": "^29.4.6",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}