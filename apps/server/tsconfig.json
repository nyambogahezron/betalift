{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@repo/*": ["../../packages/*"]
		},
		"module": "es2020",
		"moduleResolution": "node",
		"target": "ES2020",
		"lib": ["esnext"],
		"types": ["node"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noUncheckedIndexedAccess": true,
		"strict": true,
		"jsx": "react-jsx",
		"isolatedModules": true,
		"noUncheckedSideEffectImports": true,
		"moduleDetection": "force",
		"skipLibCheck": true
	},
	"include": ["src/**/*", "tests"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "logs"]
}
