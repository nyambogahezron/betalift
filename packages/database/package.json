	"dependencies": {
		"mongoose": "^9.1.1",
		"bcryptjs": "^3.0.3",
		"validator": "^13.15.26"
	},
	"devDependencies": {
		"@repo/typescript-config": "*",
		"@types/bcryptjs": "^3.0.0",
		"@types/node": "^22.13.1",
		"@types/validator": "^13.15.10",
		"typescript": "^5.3.3"
