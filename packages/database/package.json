{
	"name": "@repo/database",
	"version": "0.0.0",
	"private": true,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./connect": {
			"types": "./dist/connect.d.ts",
			"default": "./dist/connect.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
